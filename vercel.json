{
  "version": 2,
  "name": "physical-ai-book",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/$1.js" },
    { "src": "/(.*)", "dest": "frontend/build/index.html" }
  ],
  "env": {
    "REACT_APP_API_ENDPOINT": "@rag_chatbot_api_endpoint"
  },
  "build": {
    "env": {
      "NODE_VERSION": "20"
    }
  }
}
